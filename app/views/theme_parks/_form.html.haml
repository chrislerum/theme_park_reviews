= form_for @theme_park do |f|
  - if @theme_park.errors.any?
    #error_explanation
      %h2= "#{pluralize(@theme_park.errors.count, "error")} prohibited this theme_park from being saved:"
      %ul
        - @theme_park.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :rating
    = f.number_field :rating
  .actions
    = f.submit 'Save'

= form_for @theme_park do |f|
  -if @theme_park.errors.any?
    #error_explanation
      %h2
        =pluralize(@theme_park.errors.count, "error")
        prohibited this theme park from being saved:
      %ul
      - @theme_park.errors.full_messages.each do |message|
        %li= message
  %p
    = f.label :name
    = f.text_field :name
  %p
    = f.label :description
    = f.text_area :description
  %p
    = f.label :location
    = f.text_field :location
  %p
    = f.label :rating
    = f.text_field :rating
  %p
    = f.fields_for :theme_park_images do |ff|
      %p
        = ff.label :title
        = ff.text_field :title
      %p
        = ff.label :photo
        = ff.file_field :photo
  %p
    = f.submit
